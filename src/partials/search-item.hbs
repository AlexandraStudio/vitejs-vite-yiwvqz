<div
  class="flex w-full flex-col items-start justify-start bg-white shadow-base md:flex-row md:items-center md:justify-between"
>
  <div class="flex flex-row items-center justify-start">
    <div
      class="relative h-[100px] w-[120px] shrink-0 overflow-hidden bg-white md:w-[160px] lg:h-[120px] lg:w-[190px]"
    >
      <img
        class="h-full w-full overflow-hidden object-scale-down"
        alt=""
        src={{image}}
      />
    </div>
    <div
      class="flex flex-1 flex-row items-center justify-center self-stretch p-5"
    >
      <div class="relative flex-1 leading-[140%]">
        <p>{{title}}</p>
      </div>
    </div>
  </div>
  <div
    class="flex w-full flex-col items-start justify-start bg-white p-5 md:w-auto md:px-[30px]"
  >
    <button
      class="button--outlined-gray w-full !px-5 !py-3.5 hover:!border-white hover:!bg-green-gradient hover:text-white"
    >
      <span class="!text-4xs !leading-[120%] lg:!text-3xs">Перейти к товару</span>
    </button>
  </div>
</div>