<section
  class="relative mx-auto mb-[80px] flex max-w-[360px] flex-col items-start justify-center gap-[40px] rounded bg-black p-10 text-base text-white md:mb-[100px] md:max-w-[1024px] md:flex-row md:items-center lg:mb-[120px] lg:max-w-[1410px] lg:justify-between lg:gap-0 lg:p-[60px] lg:text-xl"
>
  <div
    class="flex flex-col items-start justify-center gap-[10px] self-stretch md:gap-[20px]"
  >
    <div class="relative self-stretch font-medium leading-[130%]">
      {{title}}
    </div>
    <div
      class="relative self-stretch text-sm leading-[140%] text-light-gray lg:text-lg"
    >
      <p>{{description}}</p>
    </div>
    {{#if price}}
      <div class="relative font-medium leading-[130%]">
        {{price}}
      </div>
    {{/if}}
  </div>
  <button class="button--filled-green">
    <span>{{button-text}}</span>
  </button>
</section>